<?xml version="1.0" encoding="utf-8"?>
<Patch>

    <!-- Chemfuel Cooler -->
    <Operation Class="PatchOperationAdd">
        <xpath>Defs/ThingDef[defName="CAS_ChemfuelCooler"]</xpath>
        <value>
            <designatorDropdown>Ferny_Coolers</designatorDropdown>
        </value>
    </Operation>

    <!-- Standing Heaters -->
    <Operation Class="PatchOperationConditional">
        <xpath>Defs/ThingDef[defName="Heater"]/designatorDropdown</xpath>

        <nomatch Class="PatchOperationAdd">
            <xpath>Defs/ThingDef[defName="Heater"]</xpath>
            <value>
                <designatorDropdown>KobeRiddle_StandingHeaters</designatorDropdown>
            </value>
        </nomatch>
    </Operation>
    <Operation Class="PatchOperationAdd">
        <xpath>Defs/ThingDef[defName="CAS_ChemfuelHeater"]</xpath>
        <value>
            <designatorDropdown>KobeRiddle_StandingHeaters</designatorDropdown>
        </value>
    </Operation>

</Patch>