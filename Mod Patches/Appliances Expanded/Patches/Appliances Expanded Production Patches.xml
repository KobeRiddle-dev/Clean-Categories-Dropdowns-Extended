<?xml version="1.0" encoding="utf-8"?>
<Patch>

    <!-- Smelters -->
    <Operation Class="PatchOperationConditional">
        <xpath>Defs/ThingDef[defName="ElectricSmelter"]/designatorDropdown</xpath>
        <nomatch Class="PatchOperationAdd">
            <xpath>Defs/ThingDef[defName="ElectricSmelter"]</xpath>
            <value>
                <designatorDropdown>KobeRiddle_Smelters</designatorDropdown>
            </value>
        </nomatch>
    </Operation>
    <Operation Class="PatchOperationAdd">
        <xpath>Defs/ThingDef[defName="CA_ChemfuelSmelter"]</xpath>
        <value>
            <designatorDropdown>KobeRiddle_Smelters</designatorDropdown>
        </value>
    </Operation>

    <!-- Smithies -->
    <Operation Class="PatchOperationAdd">
        <xpath>Defs/ThingDef[defName="CA_ChemfuelSmithy" or defName="CE_FueledSmithyLarge"]</xpath>
        <value>
            <designatorDropdown>KobeRiddle_Smithies</designatorDropdown>
        </value>
    </Operation>

    <!-- Crematoriums -->
    <Operation Class="PatchOperationConditional">
        <xpath>Defs/ThingDef[defName="ElectricCrematorium"]/designatorDropdown</xpath>
        <nomatch Class="PatchOperationAdd">
            <xpath>Defs/ThingDef[defName="ElectricCrematorium"]</xpath>
            <value>
                <designatorDropdown>KobeRiddle_Crematoriums</designatorDropdown>
            </value>
        </nomatch>
    </Operation>
    <Operation Class="PatchOperationAdd">
        <xpath>Defs/ThingDef[defName="CA_ChemfuelCrematorium"]</xpath>
        <value>
            <designatorDropdown>KobeRiddle_Crematoriums</designatorDropdown>
        </value>
    </Operation>

</Patch>