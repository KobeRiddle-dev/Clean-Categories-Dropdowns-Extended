        <value>
            <designatorDropdown>KobeRiddle_Stools</designatorDropdown>
        </value>
    </Operation>

    <!-- Plant pots -->
    <Operation Class="PatchOperationAdd">
        <xpath>Defs/ThingDef[defName="PlantPot" or defName="VFE_LongPlantPot"]</xpath>
        <value>
            <designatorDropdown>Ferny_PlantPots</designatorDropdown>
        </value>
    </Operation>

    <!-- Tables -->
    <Operation Class="PatchOperationAdd">
        <xpath>Defs/ThingDef[defName="Table_1x1c"]</xpath>
        <value>
            <designatorDropdown>Ferny_Tables</designatorDropdown>
        </value>
    </Operation>

    <!-- Royal Tables -->
    <Operation Class="PatchOperationAdd">
        <xpath>Defs/ThingDef[@ParentName="RoyalTableDesc"]</xpath>
        <value>
            <designatorDropdown>Ferny_RoyalTables</designatorDropdown>
        </value>
    </Operation>

