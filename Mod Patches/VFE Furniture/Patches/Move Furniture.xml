<?xml version="1.0" encoding="utf-8"?>
<Patch>

    <!-- Desk Lamp -->
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Lighting Category</li>
        </mods>

        <match Class="PatchOperationReplace">
            <xpath>Defs/ThingDef[defName="VFE_DeskLamp"]/designationCategory</xpath>
            <value>
                <designationCategory>Ferny_Lighting</designationCategory>
            </value>
        </match>

        <nomatch Class="PatchOperationReplace">
            <xpath>Defs/ThingDef[defName="VFE_DeskLamp"]/designationCategory</xpath>
            <value>
                <designationCategory>Furniture</designationCategory>
            </value>
        </nomatch>

    </Operation>

    <!-- Animal Sarcophagus -->
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Culture Category</li>
        </mods>

        <match Class="PatchOperationReplace">
            <xpath>Defs/ThingDef[defName="VFE_AnimalSarcophagus"]/designationCategory</xpath>
            <value>
                <designationCategory>Ideology</designationCategory>
            </value>
        </match>

    </Operation>

    <!-- Wardrobes -->
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Bedroom Category</li>
        </mods>

        <match Class="PatchOperationAdd">
            <xpath>Defs/ThingDef[@ParentName="VFE_WardrobeBase"]</xpath>
            <value>
                <designationCategory>Ferny_Bedroom</designationCategory>
            </value>
        </match>

    </Operation>
    
</Patch>