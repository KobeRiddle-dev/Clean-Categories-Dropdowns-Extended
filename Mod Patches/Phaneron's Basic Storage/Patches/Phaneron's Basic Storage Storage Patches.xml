<?xml version="1.0" encoding="utf-8"?>
<Patch>

    <!-- Crates -->
    <Operation Class="PatchOperationAdd">
        <xpath>Defs/ThingDef[defName="BasicStorageMediumCrate" or defName="BasicStorageLargeCrate" or defName="BasicStorageMetalCrate" or defName="BasicStorageWoodenCrate"]</xpath>
        <value>
            <designatorDropdown>KobeRiddle_PhaneronCrates</designatorDropdown>
        </value>
    </Operation>

    <!-- Pallets -->
    <Operation Class="PatchOperationAdd">
        <xpath>Defs/ThingDef[defName="BasicStoragePalletLarge" or defName="BasicStoragePalletSmall"]</xpath>
        <value>
            <designatorDropdown>KobeRiddle_Pallets</designatorDropdown>
        </value>
    </Operation>

    <!-- Food Storages -->
    <Operation Class="PatchOperationAdd">
        <xpath>Defs/ThingDef[defName="BasicStorageFoodBarrel" or defName="BasicStorageFoodCupboard"]</xpath>
        <value>
            <designatorDropdown>KobeRiddle_Pallets</designatorDropdown>
        </value>
    </Operation>

    <!-- Weapon Rack -->
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>[sbz] Neat Storage</li>
            <li>[sbz] Gravship Storage</li>
        </mods>
        <match Class="PatchOperationAdd">
            <xpath>Defs/ThingDef[defName="KobeRiddle_WeaponRacks"]</xpath>
            <value>
                <designatorDropdown>KobeRiddle_WeaponRacks</designatorDropdown>
            </value>
        </match>
    </Operation>

</Patch>