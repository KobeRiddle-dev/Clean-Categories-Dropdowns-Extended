<?xml version="1.0" encoding="utf-8"?>
<Patch>

    <!-- Kitchen things -->
    <Operation Class="PatchOperationConditional">
        <xpath>Defs/DesignationCategoryDef[defName="Ferny_Kitchen"]</xpath>

        <match Class="PatchOperationReplace">
            <xpath>Defs/ThingDef[defName="CE_ChemfuelPot" or defName="CA_ChemfuelStoveLarge" or defName="CE_ChemfuelStove"
                or defName="CE_ChemfuelDeepFrier" or defName="CE_AirFryer" or defName="CE_ChemfuelGrill"]/designationCategory</xpath>
            <value>
                <designationCategory>Ferny_Kitchen</designationCategory>
            </value>
        </match>

        <nomatch Class="PatchOperationReplace">
            <xpath>Defs/ThingDef[defName="CE_ChemfuelPot" or defName="CA_ChemfuelStoveLarge" or defName="CE_ChemfuelStove"
                or defName="CE_ChemfuelDeepFrier" or defName="CE_AirFryer" or defName="CE_ChemfuelGrill"]/designationCategory</xpath>
            <value>
                <designationCategory>Production</designationCategory>
            </value>
        </nomatch>

    </Operation>

    <!-- Production Things -->
    <Operation Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName="CE_FueledSmithyLarge" or defName="CA_ChemfuelCrematorium" or defName="CA_ChemfuelSmithy"
            or defName="CA_ChemfuelSmelter"]/designationCategory</xpath>
        <value>
            <designationCategory>Production</designationCategory>
        </value>
    </Operation>

    <!-- Temperature -->
    <Operation Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName="CAS_ChemfuelCooler" or defName="CAS_ChemfuelHeater"]/designationCategory</xpath>
        <value>
            <designationCategory>Temperature</designationCategory>
        </value>
    </Operation>

    <!-- Drill -->
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Environment Category</li>
        </mods>

        <match Class="PatchOperationReplace">
            <xpath>Defs/ThingDef[defName="SCP_ChemDrill"]/designationCategory</xpath>
            <value>
                <designationCategory>Ferny_Environment</designationCategory>
            </value>
        </match>

        <nomatch Class="PatchOperationReplace">
            <xpath>Defs/ThingDef[defName="SCP_ChemDrill"]/designationCategory</xpath>
            <value>
                <designationCategory>Production</designationCategory>
            </value>
        </nomatch>

    </Operation>

    <!-- Lights -->
    <Operation Class="PatchOperationConditional">
        <xpath>Defs/DesignationCategoryDef[defName="Ferny_Lighting"]</xpath>

        <match Class="PatchOperationReplace">
            <xpath>Defs/ThingDef[defName="CA_Sunlamp" or defName="CA_SunlampDark" or defName="CA_ChemfuelStandingLamp"
                or defName="CA_ChemfuelFloodlight" or defName="CAS_ChemfuelWallLight" or defName="CA_ChemfuelBrazier"
                or defName="CA_ChemfuelBrazierDark"]/designationCategory</xpath>
            <value>
                <designationCategory>Ferny_Lighting</designationCategory>
            </value>
        </match>

        <nomatch Class="PatchOperationReplace">
            <xpath>Defs/ThingDef[defName="CA_Sunlamp" or defName="CA_SunlampDark" or defName="CA_ChemfuelStandingLamp"
                or defName="CA_ChemfuelFloodlight" or defName="CAS_ChemfuelWallLight" or defName="CA_ChemfuelBrazier"
                or defName="CA_ChemfuelBrazierDark"]/designationCategory</xpath>
            <value>
                <designationCategory>Furniture</designationCategory>
            </value>
        </nomatch>

    </Operation>

</Patch>