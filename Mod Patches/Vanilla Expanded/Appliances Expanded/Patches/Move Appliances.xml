<?xml version="1.0" encoding="utf-8"?>
<Patch>

    <!-- Kitchen things -->
    <Operation Class="PatchOperationConditional">
        <xpath>Defs/DesignationCategoryDef[defName="Ferny_Kitchen"]</xpath>

        <match Class="PatchOperationReplace">
            <xpath>Defs/ThingDef[defName="CE_ChemfuelPot" or defName="CA_ChemfuelStoveLarge" or defName="CE_ChemfuelStove"
                or defName="CE_ChemfuelDeepFrier" or defName="CE_AirFryer" or defName="CE_ChemfuelGrill"]/designationCategory</xpath>
            <value>
                <designationCategory>Ferny_Kitchen</designationCategory>
            </value>
        </match>

        <nomatch Class="PatchOperationReplace">
            <xpath>Defs/ThingDef[defName="CE_ChemfuelPot" or defName="CA_ChemfuelStoveLarge" or defName="CE_ChemfuelStove"
                or defName="CE_ChemfuelDeepFrier" or defName="CE_AirFryer" or defName="CE_ChemfuelGrill"]/designationCategory</xpath>
            <value>
                <designationCategory>Production</designationCategory>
            </value>
        </nomatch>

    </Operation>

    <!-- Crafting Things -->
    <Operation Class="PatchOperationConditional">
        <xpath>Defs/DesignationCategoryDef[defName="Ferny_Production"]</xpath>

        <match Class="PatchOperationReplace">
            <xpath>Defs/ThingDef[defName="CE_FueledSmithyLarge" or defName="CA_ChemfuelSmithy"]/designationCategory</xpath>
            <value>
                <designationCategory>Ferny_Production</designationCategory>
            </value>
        </match>

        <nomatch Class="PatchOperationReplace">
            <xpath>Defs/ThingDef[defName="CE_FueledSmithyLarge" or defName="CA_ChemfuelSmithy"]/designationCategory</xpath>
            <value>
                <designationCategory>Production</designationCategory>
            </value>
        </nomatch>

    </Operation>

    <!-- Processing Things -->
    <Operation Class="PatchOperationConditional">
        <xpath>Defs/DesignationCategoryDef[defName="Ferny_ProcessingProduction"]</xpath>

        <match Class="PatchOperationReplace">
            <xpath>Defs/ThingDef[defName="CA_ChemfuelCrematorium" or defName="CA_ChemfuelSmelter"]/designationCategory</xpath>
            <value>
                <designationCategory>Ferny_ProcessingProduction</designationCategory>
            </value>
        </match>

        <nomatch Class="PatchOperationReplace">
            <xpath>Defs/ThingDef[defName="CA_ChemfuelCrematorium" or defName="CA_ChemfuelSmelter"]/designationCategory</xpath>
            <value>
                <designationCategory>Production</designationCategory>
            </value>
        </nomatch>

    </Operation>

    <!-- Temperature: Heating -->
    <Operation Class="PatchOperationConditional">
        <xpath>Defs/DesignationCategoryDef[defName="Ferny_Heating"]</xpath>

        <match Class="PatchOperationReplace">
            <xpath>Defs/ThingDef[defName="CAS_ChemfuelHeater"]/designationCategory</xpath>
            <value>
                <designationCategory>Ferny_Heating</designationCategory>
            </value>
        </match>

        <nomatch Class="PatchOperationReplace">
            <xpath>Defs/ThingDef[defName="CAS_ChemfuelHeater"]/designationCategory</xpath>
            <value>
                <designationCategory>Temperature</designationCategory>
            </value>
        </nomatch>

    </Operation>

    <!-- Temperature: Cooling -->
    <Operation Class="PatchOperationConditional">
        <xpath>Defs/DesignationCategoryDef[defName="Ferny_Cooling"]</xpath>

        <match Class="PatchOperationReplace">
            <xpath>Defs/ThingDef[defName="CAS_ChemfuelCooler"]/designationCategory</xpath>
            <value>
                <designationCategory>Ferny_Cooling</designationCategory>
            </value>
        </match>

        <nomatch Class="PatchOperationReplace">
            <xpath>Defs/ThingDef[defName="CAS_ChemfuelCooler"]/designationCategory</xpath>
            <value>
                <designationCategory>Temperature</designationCategory>
            </value>
        </nomatch>

    </Operation>

    <!-- Drill -->
    <Operation Class="PatchOperationConditional">
        <xpath>Defs/ThingDef[defName="Ferny_ProductionInfrastructure"]</xpath>

        <match Class="PatchOperationReplace">
            <xpath>Defs/ThingDef[defName="SCP_ChemDrill"]/designationCategory</xpath>
            <value>
                <designationCategory>Ferny_ProductionInfrastructure</designationCategory>
            </value>
        </match>

        <nomatch Class="PatchOperationReplace">
            <xpath>Defs/ThingDef[defName="SCP_ChemDrill"]/designationCategory</xpath>
            <value>
                <designationCategory>Production</designationCategory>
            </value>
        </nomatch>

    </Operation>

    <!-- Lights -->
    <Operation Class="PatchOperationConditional">
        <xpath>Defs/DesignationCategoryDef[defName="Ferny_Lighting"]</xpath>

        <match Class="PatchOperationReplace">
            <xpath>Defs/ThingDef[defName="CA_Sunlamp" or defName="CA_SunlampDark" or defName="CA_ChemfuelStandingLamp"
                or defName="CA_ChemfuelFloodlight" or defName="CAS_ChemfuelWallLight" or defName="CA_ChemfuelBrazier"
                or defName="CA_ChemfuelBrazierDark"]/designationCategory</xpath>
            <value>
                <designationCategory>Ferny_Lighting</designationCategory>
            </value>
        </match>

        <nomatch Class="PatchOperationReplace">
            <xpath>Defs/ThingDef[defName="CA_Sunlamp" or defName="CA_SunlampDark" or defName="CA_ChemfuelStandingLamp"
                or defName="CA_ChemfuelFloodlight" or defName="CAS_ChemfuelWallLight" or defName="CA_ChemfuelBrazier"
                or defName="CA_ChemfuelBrazierDark"]/designationCategory</xpath>
            <value>
                <designationCategory>Furniture</designationCategory>
            </value>
        </nomatch>

    </Operation>

</Patch>