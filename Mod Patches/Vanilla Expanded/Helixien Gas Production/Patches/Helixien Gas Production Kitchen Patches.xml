<?xml version="1.0" encoding="utf-8"?>
<Patch>
    
    <!-- Stoves -->
    <Operation Class="PatchOperationAdd">
        <xpath>Defs/ThingDef[defName="VFE_TableStoveLargeGas"]</xpath>
        <value>
            <designatorDropdown>KobeRiddle_Stoves</designatorDropdown>
        </value>
    </Operation>

    <!-- Move Stove to Kitchen -->
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Progression: Kitchen</li>
        </mods>

        <match Class="PatchOperationReplace">
            <xpath>Defs/ThingDef[defName="VFE_TableStoveLargeGas"]/designationCategory</xpath>
            <value>
                <designationCategory>Ferny_Kitchen</designationCategory>
            </value>
        </match>

        <nomatch Class="PatchOperationReplace">
            <xpath>Defs/ThingDef[defName="VFE_TableStoveLargeGas"]/designationCategory</xpath>
            <value>
                <designationCategory>Production</designationCategory>
            </value>
        </nomatch>

    </Operation>

</Patch>