<?xml version="1.0" encoding="utf-8"?>
<Patch>

    <!-- Smithies -->
    <Operation Class="PatchOperationAdd">
        <xpath>Defs/ThingDef[defName="VFE_TableSmithyLargeGas"]</xpath>
        <value>
            <designatorDropdown>KobeRiddle_Smithies</designatorDropdown>
        </value>
    </Operation>

    <!-- Move Smithy to Production -->
    <Operation Class="PatchOperationConditional">
        <xpath>Defs/DesignationCategoryDef[defName="Ferny_Production"]</xpath>

        <match Class="PatchOperationReplace">
            <xpath>Defs/ThingDef[defName="VFE_TableSmithyLargeGas"]/designationCategory</xpath>
            <value>
                <designationCategory>Ferny_Production</designationCategory>
            </value>
        </match>

        <nomatch Class="PatchOperationReplace">
            <xpath>Defs/ThingDef[defName="VFE_TableSmithyLargeGas"]/designationCategory</xpath>
            <value>
                <designationCategory>Production</designationCategory>
            </value>
        </nomatch>

    </Operation>
    
</Patch>