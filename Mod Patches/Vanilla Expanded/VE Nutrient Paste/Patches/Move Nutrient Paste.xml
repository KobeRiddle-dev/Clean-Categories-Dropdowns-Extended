<?xml version="1.0" encoding="utf-8"?>
<Patch>

    <!-- Kitchen things -->
    <Operation Class="PatchOperationConditional">
        <xpath>Defs/DesignationCategoryDef[defName="Ferny_Kitchen"]</xpath>

        <match Class="PatchOperationReplace">
            <xpath>Defs/ThingDef[defName="VNPE_NutrientPastePipe"
                or defName="VNPE_UndergroundNutrientPastePipe"
                or defName="VNPE_NutrientPasteValve"
                or defName="VNPE_NutrientPasteGrinder"
                or defName="VNPE_NutrientPasteTap"
                or defName="VNPE_NutrientPasteFeeder"
                or defName="VNPE_NutrientPasteDripper"
                or defName="VNPE_NutrientPasteVat"]/designationCategory</xpath>
            <value>
                <designationCategory>Ferny_Kitchen</designationCategory>
            </value>
        </match>

    </Operation>

    <!-- Deconstruction Designator -->
    <Operation Class="PatchOperationConditional">
        <xpath>Defs/DesignationCategoryDef[defName="Ferny_Kitchen"]</xpath>

        <match Class="PatchOperationReplace">
            <xpath>Defs/PipeSystem.PipeNetDef[defName="VNPE_NutrientPasteNet"]/designator/designationCategoryDef</xpath>
            <value>
                <designationCategoryDef>Ferny_Kitchen</designationCategoryDef>
            </value>
        </match>

    </Operation>

</Patch>