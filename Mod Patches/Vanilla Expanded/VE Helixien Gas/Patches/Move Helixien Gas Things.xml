<?xml version="1.0" encoding="utf-8"?>
<Patch>

    <!-- Kitchen things -->
    <Operation Class="PatchOperationConditional">
        <xpath>Defs/DesignationCategoryDef[defName="Ferny_Kitchen"]</xpath>

        <match Class="PatchOperationReplace">
            <xpath>Defs/ThingDef[defName="VHGE_GasPoweredStove"]/designationCategory</xpath>
            <value>
                <designationCategory>Ferny_Kitchen</designationCategory>
            </value>
        </match>

        <nomatch Class="PatchOperationReplace">
            <xpath>Defs/ThingDef[defName="VHGE_GasPoweredStove"]/designationCategory</xpath>
            <value>
                <designationCategory>Production</designationCategory>
            </value>
        </nomatch>

    </Operation>

    <!-- Crafting Things -->
    <Operation Class="PatchOperationConditional">
        <xpath>Defs/DesignationCategoryDef[defName="Ferny_Production"]</xpath>

        <match Class="PatchOperationReplace">
            <xpath>Defs/ThingDef[defName="VHGE_GasPoweredSmithy"]/designationCategory</xpath>
            <value>
                <designationCategory>Ferny_Production</designationCategory>
            </value>
        </match>

        <nomatch Class="PatchOperationReplace">
            <xpath>Defs/ThingDef[defName="VHGE_GasPoweredSmithy"]/designationCategory</xpath>
            <value>
                <designationCategory>Production</designationCategory>
            </value>
        </nomatch>

    </Operation>

    <!-- Processing Things -->
    <Operation Class="PatchOperationConditional">
        <xpath>Defs/DesignationCategoryDef[defName="Ferny_ProcessingProduction"]</xpath>

        <match Class="PatchOperationReplace">
            <xpath>Defs/ThingDef[defName="VHGE_GasPoweredRefinery" or defName="VHGE_GasPoweredCrematorium" or defName="VHGE_GasPoweredSmelter"]/designationCategory</xpath>
            <value>
                <designationCategory>Ferny_ProcessingProduction</designationCategory>
            </value>
        </match>

        <nomatch Class="PatchOperationReplace">
            <xpath>Defs/ThingDef[defName="VHGE_GasPoweredRefinery" or defName="VHGE_GasPoweredCrematorium" or defName="VHGE_GasPoweredSmelter"]/designationCategory</xpath>
            <value>
                <designationCategory>Production</designationCategory>
            </value>
        </nomatch>

    </Operation>

    <!-- Temperature: Heating -->
    <Operation Class="PatchOperationConditional">
        <xpath>Defs/DesignationCategoryDef[defName="Ferny_Heating"]</xpath>

        <match Class="PatchOperationReplace">
            <xpath>Defs/ThingDef[defName="VHGE_GasHeater"]/designationCategory</xpath>
            <value>
                <designationCategory>Ferny_Heating</designationCategory>
            </value>
        </match>

        <nomatch Class="PatchOperationReplace">
            <xpath>Defs/ThingDef[defName="VHGE_GasHeater"]/designationCategory</xpath>
            <value>
                <designationCategory>Temperature</designationCategory>
            </value>
        </nomatch>

    </Operation>

    <!-- Temperature: Cooling -->
    <Operation Class="PatchOperationConditional">
        <xpath>Defs/DesignationCategoryDef[defName="Ferny_Cooling"]</xpath>

        <match Class="PatchOperationReplace">
            <xpath>Defs/ThingDef[defName="VHGE_GasCooler"]/designationCategory</xpath>
            <value>
                <designationCategory>Ferny_Cooling</designationCategory>
            </value>
        </match>

        <nomatch Class="PatchOperationReplace">
            <xpath>Defs/ThingDef[defName="VHGE_GasCooler"]/designationCategory</xpath>
            <value>
                <designationCategory>Temperature</designationCategory>
            </value>
        </nomatch>
        
    </Operation>

    <!-- Lights -->
    <Operation Class="PatchOperationConditional">
        <xpath>Defs/DesignationCategoryDef[defName="Ferny_Lighting"]</xpath>

        <match Class="PatchOperationReplace">
            <xpath>Defs/ThingDef[defName="VHGE_GasSunLamp" or defName="VHGE_GasLamp"
                or defName="VHGE_GasFloodlight" or defName="VHGE_GasWallLamp"]/designationCategory</xpath>
            <value>
                <designationCategory>Ferny_Lighting</designationCategory>
            </value>
        </match>

        <nomatch Class="PatchOperationReplace">
            <xpath>Defs/ThingDef[defName="VHGE_GasSunLamp" or defName="VHGE_GasLamp"
                or defName="VHGE_GasFloodlight" or defName="VHGE_GasWallLamp"]/designationCategory</xpath>
            <value>
                <designationCategory>Furniture</designationCategory>
            </value>
        </nomatch>

    </Operation>

    <!-- Transport -->
    <Operation Class="PatchOperationConditional">
        <xpath>Defs/DesignationCategoryDef[defName="VF_Vehicles"]</xpath>

        <match Class="PatchOperationReplace">
            <xpath>Defs/ThingDef[defName="VHGE_GasOperatedPodLauncher"]/designationCategory</xpath>
            <value>
                <designationCategory>VF_Vehicles</designationCategory>
            </value>
        </match>

        <match Class="PatchOperationReplace">
            <xpath>Defs/ThingDef[defName="VHGE_GasOperatedPodLauncher"]/designationCategory</xpath>
            <value>
                <designationCategory>VF_Vehicles</designationCategory>
            </value>
        </match>

        <nomatch Class="PatchOperationReplace">
            <xpath>Defs/ThingDef[defName="VHGE_GasOperatedPodLauncher"]/designationCategory</xpath>
            <value>
                <designationCategory>Misc</designationCategory>
            </value>
        </nomatch>

    </Operation>

</Patch>