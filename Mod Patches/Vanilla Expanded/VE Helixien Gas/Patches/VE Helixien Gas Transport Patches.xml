<?xml version="1.0" encoding="utf-8"?>
<Patch>

    <!-- Pod Launchers -->
    <Operation Class="PatchOperationConditional">
        <xpath>Defs/ThingDef[defName="PodLauncher"]/designatorDropdown</xpath>
        <nomatch Class="PatchOperationAdd">
            <xpath>Defs/ThingDef[defName="PodLauncher"]</xpath>
            <value>
                <designatorDropdown>KobeRiddle_PodLaunchers</designatorDropdown>
            </value>
        </nomatch>
    </Operation>
    <Operation Class="PatchOperationAdd">
        <xpath>Defs/ThingDef[defName="VHGE_GasOperatedPodLauncher"]</xpath>
        <value>
            <designatorDropdown>KobeRiddle_PodLaunchers</designatorDropdown>
        </value>
    </Operation>

</Patch>