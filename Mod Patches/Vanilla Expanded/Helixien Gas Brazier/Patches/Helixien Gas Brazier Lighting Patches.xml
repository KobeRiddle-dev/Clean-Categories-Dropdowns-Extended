<?xml version="1.0" encoding="utf-8"?>
<Patch>

    <Operation Class="PatchOperationAdd">
        <xpath>Defs/ThingDef[defName="HelixienGasBrazier" or defName="HelixienGasDarklightBrazier"]</xpath>
        <value>
            <designatorDropdown>KobeRiddle_HelixienGasBraziers</designatorDropdown>
        </value>
    </Operation>

    <!-- Move Braziers to Lighting -->
    <Operation Class="PatchOperationConditional">
        <xpath>Defs/DesignationCategoryDef[defName="Ferny_Lighting"]</xpath>

        <match Class="PatchOperationReplace">
            <xpath>Defs/ThingDef[defName="HelixienGasBrazier" or defName="HelixienGasDarklightBrazier"]/designationCategory</xpath>
            <value>
                <designationCategory>Ferny_Lighting</designationCategory>
            </value>
        </match>

        <nomatch Class="PatchOperationReplace">
            <xpath>Defs/ThingDef[defName="HelixienGasBrazier" or defName="HelixienGasDarklightBrazier"]/designationCategory</xpath>
            <value>
                <designationCategory>Furniture</designationCategory>
            </value>
        </nomatch>

    </Operation>

</Patch>