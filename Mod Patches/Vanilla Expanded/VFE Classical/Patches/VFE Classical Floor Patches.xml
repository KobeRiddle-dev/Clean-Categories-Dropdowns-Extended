<?xml version="1.0" encoding="utf-8"?>
<Patch>
    <!-- Sterile -->
    <Operation Class="PatchOperationConditional">
        <xpath>Defs/TerrainDef[defName="SterileTile"]/designatorDropdown</xpath>
        <nomatch Class="PatchOperationAdd">
            <xpath>Defs/TerrainDef[defName="SterileTile"][not(designatorDropdown)]</xpath>
            <value>
                <designatorDropdown>KobeRiddle_FloorsSterile</designatorDropdown>
            </value>
        </nomatch>
    </Operation>

    <Operation Class="PatchOperationAdd">
        <xpath>Defs/TerrainDef[defName="VFEC_BronzeTile"]</xpath>
        <value>
            <designatorDropdown>KobeRiddle_FloorsSterile</designatorDropdown>
        </value>
    </Operation>
</Patch>