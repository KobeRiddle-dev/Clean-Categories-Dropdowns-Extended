<?xml version="1.0" encoding="utf-8"?>
<Patch>

    <!-- Crafting -->
    <Operation Class="PatchOperationConditional">
        <xpath>Defs/ThingDef[defName="CraftingSpot"]/designatorDropdown</xpath>
        <nomatch Class="PatchOperationAdd">
            <xpath>Defs/ThingDef[defName="CraftingSpot"]</xpath>
            <value>
                <designatorDropdown>KobeRiddle_CraftingBenches</designatorDropdown>
            </value>
        </nomatch>
    </Operation>
    <Operation Class="PatchOperationAdd">
        <xpath>Defs/ThingDef[defName="VFEC_CraftingBench"]</xpath>
        <value>
            <designatorDropdown>KobeRiddle_CraftingBenches</designatorDropdown>
        </value>
    </Operation>

    <!-- Crematoriums -->
    <Operation Class="PatchOperationConditional">
        <xpath>Defs/ThingDef[defName="ElectricCrematorium"]/designatorDropdown</xpath>
        <nomatch Class="PatchOperationAdd">
            <xpath>Defs/ThingDef[defName="ElectricCrematorium"]</xpath>
            <value>
                <designatorDropdown>KobeRiddle_Crematoriums</designatorDropdown>
            </value>
        </nomatch>
    </Operation>
    <Operation Class="PatchOperationAdd">
        <xpath>Defs/ThingDef[defName="VFEC_WoodFiredCrematorium"]</xpath>
        <value>
            <designatorDropdown>KobeRiddle_Crematoriums</designatorDropdown>
        </value>
    </Operation>

</Patch>