<?xml version="1.0" encoding="utf-8"?>
<Patch>

    <!-- Interactive Tables -->
    <Operation Class="PatchOperationAdd">
        <xpath>Defs/ThingDef[defName="Table_interactive_1x1c" or defName="Table_interactive_2x2c"]</xpath>
        <value>
            <designatorDropdown>Ferny_InteractiveTables</designatorDropdown>
        </value>
    </Operation>

    <!-- Wardrobes -->
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Bedroom Category</li>
        </mods>

        <match Class="PatchOperationAdd">
            <xpath>Defs/ThingDef[defName="VFES_Table_IlluminatedWardrobe"]</xpath>
            <value>
                <designationCategory>Ferny_Bedroom</designationCategory>
            </value>
        </match>

    </Operation>

</Patch>