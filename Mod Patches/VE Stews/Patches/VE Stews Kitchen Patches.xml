<?xml version="1.0" encoding="utf-8"?>
<Patch>

    <!-- Soup Pot -->
    <Operation Class="PatchOperationConditional">
        <xpath>Defs/ThingDef[defName="VCE_ElectricPot"]/designatorDropdown</xpath>
        <nomatch Class="PatchOperationAdd">
            <xpath>Defs/ThingDef[defName="VCE_ElectricPot"]</xpath>
            <value>
                <designatorDropdown>KobeRiddle_SoupPots</designatorDropdown>
            </value>
        </nomatch>
    </Operation>

    <!-- Stew Pot -->
    <Operation Class="PatchOperationAdd">
        <xpath>Defs/ThingDef[defName="VCE_StewPot"]</xpath>
        <value>
            <designatorDropdown>KobeRiddle_SoupPots</designatorDropdown>
        </value>
    </Operation>

</Patch>