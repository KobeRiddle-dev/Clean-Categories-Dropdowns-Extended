<?xml version="1.0" encoding="utf-8"?>
<Patch>

    <!-- Drug labs -->
    <Operation Class="PatchOperationConditional">
        <xpath>Defs/ThingDef[defName="DrugLab"]/designatorDropdown</xpath>
        <nomatch Class="PatchOperationAdd">
            <xpath>Defs/ThingDef[defName="DrugLab"]</xpath>
            <value>
                <designatorDropdown>KobeRiddle_DrugLabs</designatorDropdown>
            </value>
        </nomatch>
    </Operation>
    <Operation Class="PatchOperationAdd">
        <xpath>Defs/ThingDef[defName="VFE_TableDrugLabElectric"]</xpath>
        <value>
            <designatorDropdown>KobeRiddle_DrugLabs</designatorDropdown>
        </value>
    </Operation>

    <!-- Smelters -->
    <Operation Class="PatchOperationConditional">
        <xpath>Defs/ThingDef[defName="ElectricSmelter"]/designatorDropdown</xpath>
        <nomatch Class="PatchOperationAdd">
            <xpath>Defs/ThingDef[defName="ElectricSmelter"]</xpath>
            <value>
                <designatorDropdown>KobeRiddle_Smelters</designatorDropdown>
            </value>
        </nomatch>
    </Operation>
    <Operation Class="PatchOperationAdd">
        <xpath>Defs/ThingDef[defName="VFE_FueledSmelter"]</xpath>
        <value>
            <designatorDropdown>KobeRiddle_Smelters</designatorDropdown>
        </value>
    </Operation>

    <!-- Smithies -->
    <Operation Class="PatchOperationAdd">
        <xpath>Defs/ThingDef[defName="VFE_TableSmithyLarge"]</xpath>
        <value>
            <designatorDropdown>KobeRiddle_Smithies</designatorDropdown>
        </value>
    </Operation>

    <!-- Machining Tables -->
    <Operation Class="PatchOperationAdd">
        <xpath>Defs/ThingDef[defName="TableMachining" or defName="VFE_TableMachiningLarge"]</xpath>
        <value>
            <designatorDropdown>KobeRiddle_MachiningTables</designatorDropdown>
        </value>
    </Operation>

    <!-- Stonecutting Tables -->
    <Operation Class="PatchOperationAdd">
        <xpath>Defs/ThingDef[defName="TableStonecutter" or defName="VFE_TableStonecutterElectric"]</xpath>
        <value>
            <designatorDropdown>KobeRiddle_StonecuttingTables</designatorDropdown>
        </value>
    </Operation>

    <!-- Tailoring Benches -->
    <Operation Class="PatchOperationAdd">
        <xpath>Defs/ThingDef[defName="VFE_TableTailorLarge"]</xpath>
        <value>
            <designatorDropdown>KobeRiddle_TailoringBenches</designatorDropdown>
        </value>
    </Operation>

</Patch>